/* pages/my/my-profile/my-profile.wxss */
page, .container{
  background: #f4f4f4;
}

.container{
  padding-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar{
  margin-bottom: 30rpx;
}

.avatar image{
  width: 150rpx;
  height:150rpx;
  border-radius: 150rpx;
}

.input-view{
  display: flex;
  flex-direction: column;
  width: 600rpx;
  font-size: 34rpx;
  color: #222;
  border-bottom: 1px solid #666;
  margin-bottom: 50rpx;
}

.input-view .title{
  font-size: 29rpx;
  color: #999;
  margin-bottom: 12rpx;
}