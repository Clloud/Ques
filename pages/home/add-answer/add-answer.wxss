/* pages/discussion/add-answer/add-answer.wxss */
.title-wrapper{
  margin: 10rpx 30rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #999;
}

.title{
  /* 隐藏超出2行的内容 */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.area-view{

  margin: 30rpx 30rpx;
  width: 100%;
  font-size: 33rpx;
  letter-spacing: 1px;
} 

.area-view .textarea{
  width: 690rpx;
  height: 70vh;
}

.button-frame{
  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 34rpx;
  color: #0184FD;
  letter-spacing: 2px;

  position: fixed;
  bottom: 40rpx;
  left: 75rpx;

  width: 600rpx;
  height: 75rpx;

  border: 1px solid #0184FD;
  border-radius: 10rpx;
}