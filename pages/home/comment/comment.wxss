/* pages/home/comment/comment.wxss */
.header{
  display: flex;
  align-items: center;

  padding: 0 30rpx;
  background: #f4f4f4;
  height: 75rpx;
  font-size: 30rpx;
  letter-spacing: 0.5rpx;
  color: #777;
}

.comments{
  margin-bottom: 80rpx;
}

.comments .comment{
  display: flex;
  border-bottom: 1px solid #ddd;
  padding: 20rpx 30rpx;
}

.comments .comment .left-part{
  width: 100rpx;
}

.comments .comment .left-part .avatar{
  
}

.comments .comment .left-part .avatar image{
  width: 75rpx;
  height: 75rpx;
  border-radius: 75rpx;
}

.comments .comment .right-part{
  display: flex;
  flex-direction: column;
}

.comments .comment .right-part .name{
  font-size: 31rpx;
  /* font-weight: bold; */
  margin-bottom: 10rpx;
}

.comments .comment .right-part .content{
  font-size: 31rpx;
  margin-bottom: 30rpx;
}

.comments .comment .right-part .date{
  font-size: 28rpx;
  color: #999;
}

.write-comment{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 95rpx;
  background: #fff;
  border-top: 1px solid#ddd;
  padding: 10rpx 30rpx;
  box-sizing: border-box;

   display: flex;
   justify-content: space-between;
   align-items: center;
}

.write-comment .input-view{
  font-size: 30rpx;
  width: 550rpx;
}

.write-comment .submit-button{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  color: #aaaaaa;
  padding: 0 15rpx;
  border-radius: 5rpx;
}

.write-comment .submit-button-selected{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  color: #0184FD;
  padding: 0 15rpx;
  border-radius: 5rpx;
}
